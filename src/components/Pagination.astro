---
type Props = {
  page: number;
  numberOfPosts: number;
  postsPerPage: number;
};
const { page, numberOfPosts, postsPerPage }: Props = Astro.props;
const hasPrevious = page > 1;
const hasNext = numberOfPosts > page * postsPerPage;
---

{
  hasPrevious && (
    <a href={`?page=${page - 1}`} class="bg-teal-900 text-white py-3 px-6 rounded-xl text-xl">
      Previous
    </a>
  )
}
{
  hasNext && (
    <a
      href={`?page=${page + 1}`}
      class:list={[
        "bg-teal-900 text-white py-3 px-6 rounded-xl text-xl",
        { "ml-auto": !hasPrevious },
      ]}
    >
      Next
    </a>
  )
}
