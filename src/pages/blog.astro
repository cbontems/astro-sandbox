---
import { getCollection } from "astro:content";
import PostsList from "~/components/PostsList.astro";
import Layout from "~/layouts/Layout.astro";

const allPosts = await getCollection("posts");
---

<Layout title="Blog - Astro Sandbox">
    <main class="px-5 sm:px-24 max-w-7xl mx-auto w-full">
        <h1 class="text-6xl text-teal-900 font-bold mb-5">Rythm Nation Blog</h1>
		<p class="text-zinc-900 text-2xl mb-14 sm:mb-24 ">Join the Community and learn from Music Producers and Enthusiasts</p>
		<hr class="w-full border border-teal-900 mb-10 sm:mb-16 "/>
        <PostsList posts={allPosts} />
    </main>
</Layout>